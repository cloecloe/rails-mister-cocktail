<div class="banner-index" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path "neajhmsxzor3aq38j6ud" %>);">
<h1>Cocktails</h1>
<div></div>
</div>

<div class="container">
  <h1 class="text-center p-20">Our selection</h1>

  <div class="card">
    <% @cocktails.each do |cocktail| %>
      <div class="card-trip">
          <%= cl_image_tag cocktail.photo.key, height: 160, width: 160, class: "image" %>
        <div class="card-trip-infos">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
            <%= link_to cocktail_path(cocktail), method: :delete do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

