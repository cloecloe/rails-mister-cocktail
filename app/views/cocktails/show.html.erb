<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))" <%= cloudinary_url(@cocktail.photo, :resource_type => :raw) %>>
  <div class="banner-container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container my-20">
  <div class="row justify-content-around m-10">
    <div class="col-6">
      <br>
      <p>Ingredients:</p>
      <ul class="list-group my-10">
        <% @doses.each do |dose| %>
          <li class="list-group-item d-flex justify-content-between align-items-center"><%= dose.description %> - <%= dose.ingredient.name %>
            <span class="badge badge-pill">
            <%= link_to dose_path(dose), method: :delete do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
            </span>
          </li>
        <% end %>
      </ul>
    </div>

      <div class="border p-5 form-dose">
        <%= simple_form_for [@cocktail, @dose] do |d| %>
          <%= d.association :ingredient %>
          <%= d.input :description %>
          <%= d.submit "Add ingredient", class: "btn" %>
        <% end %>
      </div>
    </div>
  </div>
<br>
